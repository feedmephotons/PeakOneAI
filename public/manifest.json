  "related_applications": [],
  "shortcuts": [
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Open your messages",
      "url": "/messages",
      "icons": [{ "src": "/icons/pwa/shortcut-messages.png", "sizes": "96x96" }]
    },
    {
      "name": "Start Meeting",
      "short_name": "Meeting",
      "description": "Start a new video meeting",
      "url": "/video",
      "icons": [{ "src": "/icons/pwa/shortcut-video.png", "sizes": "96x96" }]
    },
    {
      "name": "Tasks",
      "short_name": "Tasks",
      "description": "View your tasks",
      "url": "/tasks",
      "icons": [{ "src": "/icons/pwa/shortcut-tasks.png", "sizes": "96x96" }]
    },
    {
      "name": "Ask AI",
      "short_name": "AI",
      "description": "Chat with Peak AI assistant",
      "url": "/lisa",
      "icons": [{ "src": "/icons/pwa/shortcut-ai.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile view"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "video/*", "audio/*", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt"]
        }
      ]
    }
  }
